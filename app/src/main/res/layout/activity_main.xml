<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@integer/display_1">

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@integer/display_2">

            <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text_call"
                    android:gravity="center"
                    android:textSize="26sp"
                    android:textColor="@color/colorBlack"
                    android:singleLine="true"
                    android:layout_toStartOf="@id/img_backspace"
                    android:layout_toLeftOf="@id/img_backspace"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_backspace"
                    android:id="@+id/img_backspace"
                    android:layout_alignParentRight="true"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_alignParentEnd="true"/>


        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@integer/display_3">


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                            <ImageView
                                    app:srcCompat="@drawable/ic_one"
                                    android:id="@+id/img_one"
                                    style="@style/Btn"/>
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <ImageView
                                    app:srcCompat="@drawable/ic_two"
                                    android:id="@+id/img_two"
                                    style="@style/Btn"/>
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <ImageView
                                    app:srcCompat="@drawable/ic_three"
                                    android:id="@+id/img_three"
                                    style="@style/Btn"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <ImageView
                                    app:srcCompat="@drawable/ic_four"
                                    android:id="@+id/img_four"
                                    style="@style/Btn"/>
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <ImageView
                                    app:srcCompat="@drawable/ic_five"
                                    android:id="@+id/img_five"
                                    style="@style/Btn"/>
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <ImageView
                                    app:srcCompat="@drawable/ic_six"
                                    android:id="@+id/img_six"
                                    style="@style/Btn"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <ImageView
                                    app:srcCompat="@drawable/ic_seven"
                                    android:id="@+id/img_seven"
                                    style="@style/Btn"/>
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <ImageView
                                    app:srcCompat="@drawable/ic_eight"
                                    android:id="@+id/img_eight"
                                    style="@style/Btn"/>
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <ImageView
                                    app:srcCompat="@drawable/ic_nine"
                                    android:id="@+id/img_nine"
                                    style="@style/Btn"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <ImageView
                                    app:srcCompat="@drawable/ic_zvezd"
                                    android:id="@+id/img_zvezd"
                                    style="@style/Btn"/>
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <ImageView
                                    app:srcCompat="@drawable/ic_zero"
                                    android:id="@+id/img_zero"
                                    style="@style/Btn"/>
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <ImageView
                                    app:srcCompat="@drawable/ic_reshet"
                                    android:id="@+id/img_reshet"
                                    style="@style/Btn"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_call"
                                    android:id="@+id/img_call"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerInside"
                                    android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>